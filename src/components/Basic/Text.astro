---
type Props = {
	type:
		| 'title-xl'
		| 'title-lg'
		| 'title-md'
		| 'title-sm'
		| 'body'
		| 'caption';
};

const properties = Astro.props;
---

{
	properties.type == 'title-xl' ? (
		<h1 class="text-title-xl">
			<slot>Title XLarge</slot>
		</h1>
	) : properties.type == 'title-lg' ? (
		<h2 class="text-title-lg">
			<slot>Title Large</slot>
		</h2>
	) : properties.type == 'title-md' ? (
		<h3 class="text-title-md">
			<slot>Title Medium</slot>
		</h3>
	) : properties.type == 'title-sm' ? (
		<h4 class="text-title-sm">
			<slot>Title Small</slot>
		</h4>
	) : properties.type == 'body' ? (
		<p class="text-body">
			<slot>Body</slot>
		</p>
	) : properties.type == 'caption' ? (
		<p class="text-caption">
			<slot>Caption</slot>
		</p>
	) : null
}
